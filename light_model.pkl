from sklearn.linear_model import LinearRegression
import numpy as np
import joblib

# ✅ 学習用ダミーデータ（スコア用に簡易的な例）
# X_train: 特徴量（ZCR, Energy, Entropy）
# y_train: ストレススコア
X_train = [
    [0.05, 0.01, 0.7],
    [0.08, 0.015, 0.6],
    [0.01, 0.003, 0.9],
    [0.10, 0.02, 0.4],
    [0.03, 0.007, 0.8]
]
y_train = [30, 40, 20, 60, 25]

# ✅ モデルの学習
model = LinearRegression()
model.fit(X_train, y_train)

# ✅ モデルを保存
joblib.dump(model, 'light_model.pkl')
